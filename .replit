modules = ["python-3.12"]
run = "python3 src/photogrammetry.py"

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "gobject-introspection", "gtk3", "lcms2", "libGL", "libGLU", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pkg-config", "qhull", "tcl", "tk", "xsimd", "zlib"]

[deployment]
run = ["sh", "-c", "python3 src/photogrammetry.py"]

[workflows]
runButton = "Run GUI"

[[workflows.workflow]]
name = "Run Demo"
author = 44981807
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 src/demo_dense_reconstruction.py images"

[[workflows.workflow]]
name = "Run Main"
author = 44981807
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[[workflows.workflow]]
name = "Run SfM Only"
author = 44981807
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 src/photogrammetry_v2.py images"

[[workflows.workflow]]
name = "Run Dense Demo"
author = 44981807
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 src/demo_dense_reconstruction.py images"

[[workflows.workflow]]
name = "Test Reconstruction"
author = 44981807
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 src/test_reconstruction.py"

[[workflows.workflow]]
name = "Run GUI"
author = 44981807
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 src/gui_app.py"
